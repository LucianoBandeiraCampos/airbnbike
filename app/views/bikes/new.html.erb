<h1>VIEW ONDE SERÁ MOSTRADO O FORMULÁRIO PARA INCLUIR UMA BIKE</h1>

<div class="container">
  <div>
    <%= simple_form_for(@bike) do |f| %>
      <%= f.input :title, label: "Think of an attractive title for your bike" %>
      <%= f.input :address, label: "Inform the address where be available" %>
      <%= f.input :description %>
      <%= f.input :price, label: "Price per day" %>
      <div class="d-flex justify-content-between">
        <%= f.submit 'Submit', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>