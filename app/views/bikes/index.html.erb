<div class="row justify-content-between mt-4">
  <div class="col-6">
    <h1 class="">Find a bike</h1>
  </div>
  <div class="col-6">
      <%= form_tag bikes_path, method: :get, class: "form-row justify-content-end align-items-start" do %>
        <div class="col-auto">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Which bike?"
          %>
        </div>
        <div class="col-auto">
          <%= submit_tag "Search", class: "btn btn-success" %>
        </div>
      <% end %>
  </div>
</div>

<div class="mt-4">
  <div class="row row-cols-1 row-cols-md-2 mt-1">
    <div class="col">
      <% @bikes.each do |bike| %>
        <%= render 'shared/bikes_card', bike: bike %>
      <% end %>
    </div>
    <div class="col">
      <div id="map"
        style="width: 100%; height: 900px; position: sticky; top: 0;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
