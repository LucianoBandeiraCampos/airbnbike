<div class="mt-2 pl-2 pr-2" style="background-color: white">
<% if @bikes.empty? %>
  <div class="row justify-content-center">
    <div class="col my-4">
      <h1 class="h2 mb-4">You have no bikes.</h1>
      <h2><%= link_to "Start Now", new_bike_path, class: "btn btn-warning btn-lg" %></h2>
    </div>
  </div>
<% else %>
  <% @bikes.each do |bike| %>

    <div class="card h-100">
      <div class="card-body">
        <div class="row row-cols-1 row-cols-md-2"> 
          <div class="col pt-4 align-middle">
            <h1 class="card-title h3 m-0"><%= bike.title %></h1>
            <h2 class="card-subtitle mt-2 mb-4 h6 text-muted"><%= bike.address %></h2>
            <h2 class="h5 m-0">Owner</h2>
            <h2 class="card-subtitle mt-2 mb-4 h6 text-muted"><%= bike.user.first_name %> <%= bike.user.last_name %></h2>
            <h2 class="h5 m-0">Details</h2>
            <p class="my-1 text-muted  mb-4"><%= bike.description %></p>
            <h2 class="h5 m-0">Price per day</h2>
            <p class="my-1 text-muted"><%= humanized_money_with_symbol(bike.price) %></p>
          </div>
          <div class="col pt-4">
            <%= cl_image_tag bike.photo.key, height: 350, width: 400, crop: :fill, class: "img-thumbnail" %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
<% end %>

</div>
