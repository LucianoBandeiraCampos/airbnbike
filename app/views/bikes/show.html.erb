<section class="card bike-banner my-3" style="background-image: url(<%= cl_image_path @bike.photo.key, height: 300, width: 400, crop: :fill %>)">
</section>
<section class="main-content">
  <div class="row">
    <div class="col-12 col-lg-8 mb-3">
      <div class="card h-100">
        <div class="card-body">
          <h1 class="card-title h3 m-0"><%= @bike.title %></h1>
          <h2 class="card-subtitle mt-1 mb-3 h6 text-muted"><%= @bike.address %></h2>
          <h2 class="h5 m-0">Details</h2>
          <p class="my-1 text-muted"><%= @bike.description %></p>
        </div>
      </div>
    </div>
    <aside class="col-12 col-lg-4">
      <div class="sticky-cards mb-3">
        <div class="card mb-3">
          <div class="card-body bg-white">
            <form>
            <h3>Rent this bike</h3>
              <div class="form-group">
                <div class="input-group mb-2 border-rounded">
                  <div class="input-group-prepend">
                    <div class="input-group-text">From
                    </div>
                  </div>
                <input type="text" class="form-control" id="inlineFormInputGroupUsername" placeholder="29/11/2020">
                </div>
                <div class="form-group mb-2 border-rounded">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">To
                      </div>
                    </div>
                    <input type="text" class="form-control" id="inlineFormInputGroupUsername" placeholder="29/11/2020">
                  </div>
                </div>
                <button type="submit" class="btn btn-success btn-lg btn-block">Rent for <i class="fas fa-euro-sign fa-sm"></i><strong class="ml-1"><%= @bike.price %></strong>/day</button>
              </div>
            </form>
          </div>
        </div>
        <div class="card mb-3">
          <div class="card-body bg-white d-flex justify-content-between align-items-center">
            <span class="font-weight-bold">Share</span>
            <span>
              <a class="text-secondary" href="#"><i class="fab fa-facebook-square fa-2x"></i></a>
              <a class="text-secondary" href="#"><i class="fab fa-twitter-square fa-2x"></i></a>
              <a class="text-secondary" href="#"><i class="fab fa-pinterest-square fa-2x"></i></a>
              <a class="text-secondary" href="#"><i class="fab fa-whatsapp-square fa-2x"></i></a>
            </span>
          </div>
        </div>
      </div>
    </aside>
    <div class="col-12">
      <div class="card mb-3">
        <div class="card-body">
          <h2 class="card-title h3">Bike's location</h1>
          <%= render 'shared/mapbox' %>
        </div>
      </div>
    </div>
  </div>
</section>
